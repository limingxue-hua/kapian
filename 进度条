进度条可视化 = 
    VAR Progress = [目标完成率]
    VAR ProgressPercent = FORMAT(Progress, "0%")
    VAR BarColor = "#e27201"
    VAR BgColor = "#d1d5db"
    VAR TotalBlocks = 30  -- 限制填充范围（避免负数或超过上限）
    VAR FilledBlocks =
    VAR raw = ROUND(Progress * TotalBlocks, 0)
    RETURN
    MAX(0, MIN(raw, TotalBlocks))
    VAR FilledHTML =     -- 利用 CONCATENATEX 避免 REPT 拼接出错
    CONCATENATEX(
    GENERATESERIES(1, FilledBlocks, 1),
    "<div class='block filled'></div>",""  )
    VAR EmptyHTML =
    CONCATENATEX(
    GENERATESERIES(1, TotalBlocks - FilledBlocks, 1),
    "<div class='block empty'></div>","" )
    VAR HtmlContent =
    "<!DOCTYPE html>
    <html style='height:100%; width:100%; margin:0; padding:0;'>
    <head> <style>
            body {
                height: 100%;
                width: 100%;
                margin: 0;
                padding: 0;
                overflow: hidden;
                display: flex;
                align-items: center;
                justify-content: center;
            }
            .container {
                width: 100%;
                height: 100%;
                display: flex;
                flex-direction: column;
                font-family: Segoe UI, sans-serif;
                padding: 8px;
                box-sizing: border-box;
            }
            .percent-text {
                font-size: 1.25rem;
                font-weight: bold;
                margin-bottom: 8px;
                text-align: left;
            }
            .blocks-container {
                display: flex;
                width: 100%;
                justify-content: space-between;
                gap: 3px;
                height: auto;
            }
            .block {
                flex: 1;
                height: 28px;
                border-radius: 3px;
            }
            .filled {
                background-color: " & BarColor & ";
            }
            .empty {
                background-color: " & BgColor & ";
            }
        </style>
    </head>
    <body>
        <div class='container'>
            <div class='percent-text'>" & ProgressPercent & "</div>
            <div class='blocks-container'>"& FilledHTML& EmptyHTML & "</div>
        </div>
    </body>
    </html>"
    RETURN 
    HtmlContent

